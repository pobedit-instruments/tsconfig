{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",

    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],

    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },

  "include": [
    "src"
  ]
}
